<?xml version="1.0"?>
<!DOCTYPE productDefines SYSTEM "/usr/share/YaST2/control/control.dtd">
<productDefines  xmlns="http://www.suse.com/1.0/yast2ns"
    xmlns:config="http://www.suse.com/1.0/configns">

<!--
$Id$
Work around for the text domain
textdomain="firstboot"
-->

<textdomain>firstboot</textdomain>

    <proposals config:type="list">
        <proposal>
            <mode>firstboot</mode>
            <stage>normal</stage>
            <type>firstboot_hardware</type>
            <label>Hardware Configuration</label>
            <proposal_modules config:type="list">
                <proposal_module>printer</proposal_module>
            </proposal_modules>
        </proposal>
        <proposal>
            <mode>firstboot</mode>
            <stage>normal</stage>
            <type>firstboot_network</type>
            <label>Network Configuration</label>
            <proposal_modules config:type="list">
                <proposal_module>lan</proposal_module>
                <proposal_module>dsl</proposal_module>
                <proposal_module>isdn</proposal_module>
                <proposal_module>modem</proposal_module>
                <proposal_module>proxy</proposal_module>
                <proposal_module>remote</proposal_module>
                <proposal_module>firewall</proposal_module>
            </proposal_modules>
        </proposal>
    </proposals>
    <workflows  config:type="list">
        <workflow>
            <defaults>
                <arguments>true,true</arguments>
                <archs>all</archs>
            </defaults>
            <stage>normal</stage>
            <label>Configuration</label>
            <mode>firstboot</mode>
            <modules  config:type="list">
                <module>
		<label>Welcome</label>
                    <name>firstboot_welcome</name>
                    <arguments>false,true</arguments>
                </module>
                <module>
		    <label>License Agreement</label>
                    <name>firstboot_license</name>
                    <arguments>true,true</arguments>
                </module>
                <module>
		<label>Language</label>
                    <enabled config:type="boolean">false</enabled>
                    <name>firstboot_language</name>
                    <arguments>true,true</arguments>
                </module>
                <module>
		<label>Time and Date</label>
                    <name>firstboot_timezone</name>
                    <arguments>true,true</arguments>
                </module>
                <module>
		    <label>Desktop</label>
                    <enabled config:type="boolean">false</enabled>
                    <name>firstboot_desktop</name>
                    <arguments>true,true</arguments>
                </module>
                <module>
		    <label>Network</label>
                    <name>inst_proposal</name>
                    <arguments>true,true,`firstboot_network</arguments>
                </module>
                <module>
                    <label>Root Password</label>
                    <name>inst_root</name>
                    <arguments>true,true</arguments>
                </module>
                <module>
			<label>Users</label>
                    <name>inst_auth</name>
                    <arguments>true,true</arguments>
                </module>
                <module>
		    <label>Users</label>
                    <name>inst_user</name>
                    <arguments>true,true</arguments>
                </module>
                <module>
		    <label>Hardware</label>
                    <name>inst_proposal</name>
                    <arguments>true,true,`firstboot_hardware</arguments>
                </module>
               <module>
		    <label>Finish Setup</label>
                    <name>firstboot_write</name>
                    <arguments>false,false</arguments>
                </module>
               <module>
		    <label>Finish Setup</label>
                    <name>inst_suseconfig</name>
                    <arguments>false,false</arguments>
                </module>
               <module>
		<label>Finish Setup</label>
                    <name>firstboot_finish</name>
                    <arguments>true,true</arguments>
                </module>

<!--
                <module>
                    <name>proposal</name>
                    <arguments>true,true,`firstboot</arguments>
	            	<label>Settings</label>
                </module>
-->
            </modules>
        </workflow>
    </workflows>
</productDefines>
